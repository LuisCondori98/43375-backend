<div class="container-user">
  <div class="data">
    {{#if user.admin}}
      <h2 class="user">ADMINISTRADOR</h2>
    {{/if}}
    <img src="/img/profile.png" alt="perfil">
    <h2 class="user">Nombres: {{user.name}}</h2>
    <h2 class="user">Apellidos: {{user.lastname}}</h2>
    <h2 class="user">e-mail: {{user.email}}</h2>
    <h2 class="user">Edad: {{user.age}}</h2>
    <form action="/api/session/logout" method="post">
      <input type="submit" value="Logout" class="logout">
    </form>
    {{#if user.admin}}
      <a class="link" href="/views/realtimeproducts">Agregar productos</a>
    {{/if}}
    <div>
    </div>
  </div>
</div>